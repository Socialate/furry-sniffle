<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">

    <include
            layout="@layout/app_bar_layout"
            android:id="@+id/viewProfileToolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_width="0dp"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/viewProfileToolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="0dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/name_display"
                    android:id="@+id/DisplayNameTextView"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" android:textAlignment="center"
                    android:textSize="18sp" android:textColor="@color/colorPrimaryText"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp" android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfileImageView"
                    android:src="@drawable/default_avatar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintTop_creator="1"
                    android:layout_width="250dp" tools:ignore="RtlHardcoded"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/DisplayNameTextView"
                    android:layout_height="250dp" android:layout_marginLeft="0dp"/>

            <TextView
                    android:text="@string/full_string_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/FullNameTextView" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/ProfileImageView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" android:textStyle="bold" android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText" android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.503"
                    tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>

            <TextView
                    android:text="@string/emailDisplay"
                    android:layout_width="wrap_content"
                    android:id="@+id/emailTextView"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/editButton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="wrap_content" android:textStyle="bold" android:textAlignment="center"
                    android:textSize="24sp" android:textColor="@color/colorPrimaryText"
                    app:layout_constraintHorizontal_bias="0.501"
                    tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1" tools:layout_constraintLeft_creator="1"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/FullNameTextView"
                    app:layout_constraintVertical_bias="1.0"/>

            <Button
                    android:text="Edit Profile"
                    android:layout_height="48dp"
                    android:id="@+id/editButton"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="parent" android:background="@color/colorPrimary"
                    tools:ignore="HardcodedText,MissingConstraints" android:layout_width="0dp" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0" tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_constraintLeft_creator="1" android:layout_marginBottom="24dp"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>