<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.socialteinc.socialate.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/activity_main"
            android:layout_centerVertical="true" android:layout_alignEnd="@+id/password_field"
            android:layout_marginEnd="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="27dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/email_field"
            android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="98dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/password_field"
            android:hint="Password" android:layout_below="@+id/email_field" android:layout_alignParentStart="true"/>
    <Button
            android:text="log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_btn" tools:layout_editor_absoluteY="155dp"
            tools:layout_editor_absoluteX="66dp" android:onClick="signIn"
            android:layout_marginTop="41dp" android:layout_below="@+id/password_field"
            android:layout_alignStart="@+id/activity_main" android:layout_marginStart="10dp"/>

</RelativeLayout>
